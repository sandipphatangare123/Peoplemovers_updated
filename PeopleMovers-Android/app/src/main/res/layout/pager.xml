<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/pm_intro_pic_1" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50">

        <TextView
            android:id="@+id/txt_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/s40dp"
            android:layout_marginTop="@dimen/s20dp"
            android:layout_marginRight="@dimen/s40dp"
            android:gravity="center_horizontal"
            android:letterSpacing="-0.03"
            android:lineHeight="@dimen/s28_5sp"
            android:lineSpacingExtra="3.5sp"
            android:text="PeopleMoversÂ® is the place to build strong communities and a better world."
            android:textColor="@color/color_lets_moving"
            android:textSize="@dimen/s22sp" />
    </RelativeLayout>
</LinearLayout>